@page "/task/all"
@inject IJSRuntime JSRuntime
@inject HttpClient Http
@inherits TasksBase
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>任务列表</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">首页</a></li>
                    <li class="breadcrumb-item active">任务列表</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">所有任务列表</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="task" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>节点</th>
                                <th>名称</th>
                                <th>Corn表达式</th>
                                <th>程序集/类名</th>
                                <th>状态</th>
                                <th>上传运行时间</th>
                                <th>下次运行时间</th>
                                <th>运行次数</th>
                                <th>创建时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Results != null && Results.Data != null)
                            {
                                foreach (var task in Results.Data)
                                {
                                    <tr>
                                        <td>@task.NodeName</td>
                                        <td>@task.Title</td>
                                        <td>@task.CronExpression</td>
                                        <td>
                                            @task.AssemblyName/
                                            @task.ClassName
                                        </td>
                                        <td>@task.StatusName</td>
                                        <td>@task.LastRunTime</td>
                                        <td>@task.NextRunTime</td>
                                        <td>@task.TotalRunCount</td>
                                        <td>@task.CreateUserName</td>
                                        <td>
                                            <button type="button" class="btn btn-block btn-outline-success btn-sm" @onclick="async ()=>await Start(task.Id)">启动</button>
                                            <button type="button" class="btn btn-block btn-outline-danger btn-sm" @onclick="async ()=> await Stop(task.Id)">停止</button>
                                            <button type="button" class="btn btn-block btn-outline-warning btn-sm" @onclick="async ()=> await Pager()">运行</button>
                                        </td>
                                    </tr>
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" align="center">Loading...</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
